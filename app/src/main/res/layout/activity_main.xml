<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <androidx.appcompat.widget.Toolbar
       android:id="@+id/tb_top"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
       app:menu="@menu/toolbar_main"
       android:background="@color/blossom"
       app:titleTextColor="@color/white"
       app:title="Contact" />


     <androidx.viewpager2.widget.ViewPager2
         android:id="@+id/vp_main"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         app:layout_constraintTop_toBottomOf="@id/tb_top"
         app:layout_constraintBottom_toTopOf="@id/tabLay_main"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/blossom"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toTopOf="@id/tabLay_main"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLay_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/blossom"
        app:tabIndicatorFullWidth="true"
        app:tabIndicatorHeight="3dp"
        app:tabIndicatorGravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="70dp"
        android:backgroundTint="@color/petal"
        android:src="@drawable/radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/iv_Main"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:backgroundTint="@color/petal"
        android:src="@drawable/add_user"
        app:layout_constraintTop_toTopOf="@id/iv_1"
        app:layout_constraintBottom_toBottomOf="@id/iv_1"
        app:layout_constraintStart_toStartOf="@id/iv_1"
        app:layout_constraintEnd_toEndOf="@id/iv_1"
        app:tint="@color/blossom" />


    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible"/>


</androidx.constraintlayout.widget.ConstraintLayout>