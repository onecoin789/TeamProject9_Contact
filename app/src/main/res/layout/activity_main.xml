         app:layout_constraintTop_toBottomOf="@id/tb_top"
         app:layout_constraintBottom_toTopOf="@id/tabLay_main"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/blossom"
